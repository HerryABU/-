{
  "name": "student-number-picker",
  "version": "4.3.2",
  "description": "智能学号抽取系统",
  "homepage": "https://github.com/HerryABU/student-number-picker ",
  "author": {
    "name": "Feng Yuhao",
    "email": "qbz95qbz95@outlook.com",
    "url": "https://github.com/HerryABU "
  },
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --debug",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux",
    "dist:all": "electron-builder -wml",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.fengyuhao.studentnumberpicker",
    "productName": "学号抽取系统",
    "copyright": "Copyright © 2025 Feng Yuhao",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "main.js",
      "!assets/source_files/**"
    ],
    "extraResources": [
      {
        "from": "assets/fonts",
        "to": "fonts",
        "filter": ["*.ttf", "*.woff"]
      }
    ],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "build/icons/icon.ico",
      "legalTrademarks": "学号抽取系统™"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "build/icons/icon.icns",
      "category": "public.app-category.education"
    },
    "linux": {
      "target": ["AppImage", "deb", "rpm"],
      "icon": "build/icons/icon.png",
      "category": "Education"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "学号抽取系统"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HerryABU/student-number-picker.git "
  },
  "keywords": ["electron", "student", "picker", "抽签", "教育工具"],
  "bugs": {
    "url": "https://github.com/HerryABU/student-number-picker/issues "
  },
  "devDependencies": {
    "@electron/asar": "^4.0.0",
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12"
  }
}